@model HandiBugTrackerWebClient.Models.AccountViewModel
@{
    ViewBag.Title = "Index";
}

<div class="login-form auth-form">
    <section id="loginForm">
        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.LabelFor(m => m.LoginName, new { @class = "control-label" })
            <div class="form-group">

                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.LoginName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.LoginName, "", new { @class = "text-danger" })
                </div>
            </div>
            @Html.LabelFor(m => m.Password, new { @class = "control-label" })
            <div class="form-group">

                <div class="col-md-10">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    <input type="submit" value="Sign in" class="btn btn-success" />
                </div>
            </div>
        }
    </section>
</div>

